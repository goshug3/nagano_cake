<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>商品一覧</h2>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3">
            <table class="table table-borderless">
              <tr>
                <td>
                  <%= link_to public_item_path(item.id) do %>
                    <%= image_tag item.get_image(100, 100) %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td><%= item.name %></td>
              </tr>
              <tr>
                <td>¥<%= item.price %></td>
              </tr>
            </table>
          </div>
        <% end %>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>