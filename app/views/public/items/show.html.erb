<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table class="table table-bordered">
        <thead>
          <th>ジャンル検索</th>
        </thead>
        <tbody class="table table-borderless">
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
          </tr>
          <% end %>
          
          <%= image_tag @item.get_image(450, 300) %>
          <%= @item.name %>
          <%= @item.introduction %>
          <<%= @item.add_tax_price %>円 (税込)
          
          