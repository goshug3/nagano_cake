<div class="container">
  <h1>ショッピングカート</h1>
  <%= link_to 'カートを空にする', cart_items_destroy_all_path, method: :delete, "data-confirm" => "本当に削除しますか", class: "btn btn-sm btn-danger" %>
  <div class="row">
    <table class="table">
      <thead>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.get_image(60, 40) %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.add_tax_price %>円</td>
            <td>
              <%= cart_item.amount %>
              <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch local: true do |f| %>
                <%= f.select :amount, options_for_select((1..10).to_a), {selected: cart_item.amount} %>
                <%= f.submit "変更", class:"btn btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to '削除する', cart_item_path(cart_item), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-lg-10">
      <%= link_to '買い物を続ける', root_path %>
    </div>
    <div class="col-lg-2">
      <table>
        <th>合計金額</th>
        <td>¥<%= @total_price.round.to_s(:delimited)%></td>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto" style="width: 200px;">
      <%= link_to '情報入力に進む', new_order_path %>
    </div>
  </div>
</div> 