<div class="container">
  <h3 class="col-3 mt-3 text-center bg-light text-dark">会員情報編集</h3>
  <div class="row mt-4">
    <div class="col-lg-10 mr-auto">
      <%= form_with model: @customer, url: public_customer_path, method: :patch, local: true do |f| %>
      <div class="row mb-2">
        <label class="col-lg-3 col-form-label" style="font-weight: bold;">氏名</label>
        <div class="col-auto">
          <%= f.text_field :last_name, class: "form-control last_name" %>
        </div>
        <div class="col-auto">
          <%= f.text_field :first_name, class: "form-control first_name" %>
        </div>
      </div>
      <div class="row mb-2">
        <label class="col-lg-3 col-form-label" style="font-weight: bold;">フリガナ</label>
        <div class="col-auto">
          <%= f.text_field :last_name_kana, class: "form-control last_name_kana" %>
        </div>
        <div class="col-auto">
          <%= f.text_field :first_name_kana, class: "form-control first_name_kana" %>
        </div>
      </div>
      <div class="row mb-2">
        <label class="col-lg-3 col-form-label" style="font-weight: bold;">郵便番号(ハイフンなし)</label>
        <div class="col-auto">
          <%= f.text_field :postal_code, class: "form-control postal_code" %>
        </div>
      </div>
      <div class="row mb-2">
        <label class="col-lg-3 col-form-label" style="font-weight: bold;">住所</label>
        <div class="col-lg-7">
          <%= f.text_field :address, class: "form-control address" %>
        </div>
      </div>
      <div class="row mb-2">
        <label class="col-lg-3 col-form-label" style="font-weight: bold;">電話番号(ハイフンなし)</label>
        <div class="col-auto">
          <%= f.text_field :telephone_number, class: "form-control telephone_number" %>
        </div>
      </div>
      <div class="row mb-2">
        <label class="col-lg-3 col-form-label" style="font-weight: bold;">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, class: "form-control email" %>
        </div>
      </div>
      <div class="row mb-3">
        <span class="col-lg-3"></span>
        <div class="col-lg-4">
          <%= f.submit "　　編集内容を保存　　", class: "btn btn-success" %>
        </div>
        <div class="col-lg-2">
          <%= link_to "　退会する　", public_unsubscribe_path, class: "btn btn-danger" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>