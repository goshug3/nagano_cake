<div class="container">
  <h3 class="col-3 mt-3 text-center bg-light text-dark">注文履歴一覧</h3>
  <div class="row mt-5">
    <div class="col-lg-12">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
              <td><%= order.name %></td>
              <td><%= order.order_details.sum(:amount) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>  
  </div>
  <%= paginate @orders %>
</div>