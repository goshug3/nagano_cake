<div class="container">
  <div class="row mt-3">
    <div class="col-lg-10">
      <h3 class="col-3 mt-3 text-center bg-light text-dark">商品一覧</h3>
    </div>
    <div class="col-l2">
      <%= link_to new_admin_item_path, class: " fa-2x" do %>
        <i class="fa-solid fa-circle-plus"></i>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-12">
      <table class="table">
        <thead class="table-active">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id), class: "text-dark" %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @items %>
</div>