<div class="container">
  <h3 class="col-3 mt-3 text-center bg-light text-dark">商品詳細</h3>
  <div class="row">
    <div class="col-lg-4">
      <%= image_tag @item.get_image(200, 200) %>
    </div>
    <div class="col-lg-8">
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">商品名</label>
        <div class="col-lg-6 d-flex align-items-center">
          <%= @item.name %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">商品説明</label>
        <div class="col-lg-6 d-flex align-items-center">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">ジャンル</label>
        <div class="col-lg-6 d-flex align-items-center">
          <%= @item.genre.name %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-lg-3 col-form-label">税込価格<br>(税抜価格)</label>
        <div class="col-lg-6 d-flex align-items-center">
          <strong>
            <%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
          </strong>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3 mx-auto">
      <%= link_to "   編集する   ", edit_admin_item_path(@item.id), class: "btn btn-md btn-success" %>
    </div>
  </div>
</div>